{
  "name": "server-rendered-app",
  "version": "1.0.0",
  "description": "simple server rendered app",
  "main": "app.js",
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "esbuild ./src/client/index.tsx --bundle --outfile=./public/app.js",
    "build:server": "esbuild src/server/index.ts --bundle --platform=node --outfile=./app.js",
    "start": "npm run build && node ./app.js"
  },
  "author": "CluEleSsUK",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/node": "^20.2.6",
    "@types/react": "^18.2.11",
    "@types/react-dom": "^18.2.4",
    "esbuild": "0.18.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
